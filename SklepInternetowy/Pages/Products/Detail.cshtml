@page
@model SklepInternetowy.Pages.Products.DetailModel

<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-primary">
            Details about Product
        </h2>
    </div>
    <div class="col-6 text-end">
        <a asp-page="/Index" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>  Back to Home
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.Product.Name</td>
                <td>@Model.Product.Price</td>
                <td>@Model.Product.Description</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/shoppingcarts/shoppingcart" asp-route-id="@Model.Product.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Add to Shopping Cart
                        </a>
                    </div>
                </td>
            </tr>
    </tbody>
</table>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}