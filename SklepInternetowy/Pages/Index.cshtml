@page
@model IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Products
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="shoppingcarts/shoppingcart" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Your Shopping Cart
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.ProductList.OrderBy(u => u.Id))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Price</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/products/detail" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Details
                            </a>
                            <a asp-page="/shoppingcarts/shoppingcart" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Add to Shopping Cart
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
